<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create tb_streets" author="fas">
        <createTable tableName="tb_streets">
            <column name="autoid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="system_id" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="town_ref" type="BIGINT">
                <constraints foreignKeyName="fk_streets_towns" referencedTableName="tb_towns" referencedColumnNames="autoid"/>
            </column>
            <column name="pickup_district_ref" type="BIGINT">
                <constraints foreignKeyName="fk_streets_pickup_districts" referencedTableName="tb_pickup_districts" referencedColumnNames="autoid"/>
            </column>
            <column name="liquibase_town_import_system_id" type="VARCHAR(6)">
                <constraints nullable="false"/>
            </column>
            <column name="liquibase_pickup_districts_import_system_id" type="VARCHAR(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="import base data for tb_streets" runOnChange="true" author="fas">
        <loadUpdateData tableName="tb_streets"
                        primaryKey="system_id"
                        separator=","
                        file="db/changelog/baseData/tb_streets.csv">
            <column name="system_id" type="STRING"/>
            <column name="display_name" type="STRING"/>
            <column name="liquibase_town_import_system_id" type="STRING"/>
            <column name="liquibase_pickup_districts_import_system_id" type="STRING"/>
        </loadUpdateData>
        <sql>
            UPDATE tb_streets ts
            SET town_ref = (
                SELECT autoid
                FROM tb_towns tt
                WHERE ts.liquibase_town_import_system_id = tt.system_id
            )
        </sql>
        <sql>
            UPDATE tb_towns tt
            SET pickup_district_ref = (
                SELECT autoid
                FROM tb_pickup_districts tc
                WHERE tt.liquibase_pickup_districts_import_system_id = tc.system_id
            )
        </sql>
    </changeSet>

</databaseChangeLog>