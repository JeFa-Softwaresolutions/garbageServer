<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create tb_trash_types" author="fas">
        <createTable tableName="tb_trash_types">
            <column name="autoid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="system_id" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="city_ref" type="BIGINT">
                <constraints foreignKeyName="fk_trash_types_cities" referencedTableName="tb_cities" referencedColumnNames="autoid"/>
            </column>
            <column name="liquibase_city_import_system_id" type="VARCHAR(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="import base data for tb_trash_types" runOnChange="true" author="fas">
        <loadUpdateData tableName="tb_trash_types"
                        primaryKey="system_id"
                        separator=","
                        file="db/changelog/baseData/tb_trash_types.csv">
            <column name="system_id" type="STRING"/>
            <column name="display_name" type="STRING"/>
            <column name="liquibase_city_import_system_id" type="STRING"/>
        </loadUpdateData>
        <sql>
            UPDATE tb_trash_types ttt
            SET city_ref = (
                SELECT autoid
                FROM tb_cities tc
                WHERE ttt.liquibase_city_import_system_id = tc.system_id
            )
        </sql>
    </changeSet>

</databaseChangeLog>