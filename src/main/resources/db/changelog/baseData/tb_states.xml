<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_tb_states" author="fas">
        <createTable tableName="tb_states">
            <column name="autoid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="system_id" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="insert states basedata" runOnChange="true" author="fas">
        <loadUpdateData tableName="tb_states"
                  primaryKey="system_id"
                  separator=","
                  file="db/changelog/baseData/tb_states.csv">
            <column name="system_id" type="STRING"/>
            <column name="display_name" type="STRING"/>
        </loadUpdateData>
    </changeSet>

</databaseChangeLog>